<?xml version="1.0" encoding="UTF-8"?>
<package 
 name="system" precision="128" version="0000">
    <onStart>
        <goto containerName="bell"/>
    </onStart>    
    <onButtonClick button="home">
        <goto containerName="welcome"/>
    </onButtonClick>
    <onButtonClick button="star">
        <setUSBMode active="true" hostOrDevice="device"/>
    </onButtonClick>
    <onButtonClick button="plus" insertSoundBlock="short-bell">
        <setVolume relative="up" />
    </onButtonClick>
    <onButtonClick button="minus" insertSoundBlock="short-bell">
        <setVolume relative="down"/>
    </onButtonClick>
    <onButtonClick button="playPause">
        <playPause/>
    </onButtonClick>
    <file name="bell">
    	<hyperlink start="1000" end="2000">
    		<goto containerName="your recordings"/>
    	</hyperlink>
        <block name="bellblock" start="0" end="5000">
            <onEnd>
                <goto containerName="welcome"/>
            </onEnd>
	    <block name="bellblock1" start="30" end="600"></block>
	    <block name="bellblock2" start="2000" end="3000"></block>
	    <block name="bellblock3" start="3500" end="4000"></block>
        </block>
        <block name="short-bell" start="500" end="1000">
            <onEnd>
                <stop/>
                <return/>
            </onEnd>
        </block>
    </file>
    <file name="aos">
        <block start="0" end="29600">
            <onButtonClick button="left">
                <goto containerName="share"/>
            </onButtonClick>
            <onButtonClick button="right">
                <goto containerName="listen"/>
            </onButtonClick>
            <onButtonClick button="home">
                <goto containerName="help"/>
            </onButtonClick>
        </block>
        <block name="welcome" start="1000" end="2000">
            <onEnd>
                <goto containerName="forhelp"/>
            </onEnd>
        </block>
        <block name="forhelp" start="27000" end="29500">
            <onEnd>
                <stop/>
            </onEnd>
        </block>
        <block name="listen" start="62250" end="63500" class="main-menu">
            <onEnter>
                <setLight light="red" Mode="on"/>
                <setLight light="green" Mode="off"/>
            </onEnter>
            <onExit>
                <setLight light="red" Mode="off"/>
            </onExit>
            <onEnd>
                <stop/>
            </onEnd>
            <onButtonClick button="select">
                <goto containerName="your recordings"/>
            </onButtonClick>
            <onButtonClick button="right" insertSoundBlock="bell">
                <goto containerName="speak"/>
            </onButtonClick>
            <onButtonClick button="left">
                <goto containerName="share"/>
            </onButtonClick>
        </block>
        <block name="speak" start="66000" end="67500" class="main-menu">
            <onEnter>
                <setLight light="red" Mode="on"/>
                <setLight light="green" Mode="on"/>
            </onEnter>
            <onExit>
                <setLight light="red" Mode="off"/>
                <setLight light="green" Mode="on"/>
            </onExit>
            <onEnd>
                <stop/>
            </onEnd>
            <onButtonHold button="select" insertSoundBlock="share">
                <goto containerName="notready"/>
            </onButtonHold>
            <onButtonClick button="left">
                <goto containerName="listen"/>
            </onButtonClick>
            <onButtonClick button="right">
                <goto containerName="share"/>
            </onButtonClick>
        </block>
        <block name="share" start="70000" end="71000" class="main-menu">
            <onEnter>
                <setLight light="red" Mode="off"/>
                <setLight light="green" Mode="off"/>
            </onEnter>
            <onEnd>
                <stop/>
            </onEnd>
            <onButtonClick button="select" insertSoundBlock="share">
                <goto containerName="notready"/>
            </onButtonClick>
            <onButtonClick button="left">
                <goto containerName="speak"/>
            </onButtonClick>
            <onButtonClick button="right">
                <goto containerName="listen"/>
            </onButtonClick>
        </block>
        <block name="notready" start="75000" end="77000">
            <onStart insertSoundBlock="bell">
                <stop/>
            </onStart>
            <onEnd insertSoundBlock="bell">
                <stop/>
            </onEnd>
            <onButtonHold button="down">
                <loadPackage name="sikulu"/>
            </onButtonHold>
        </block>
        <block name="help" start="168500" end="169250">
            <onEnd>
                <stop/>
            </onEnd>
            <onButtonClick button="left">
                <goto containerName="buttons"/>
            </onButtonClick>
            <onButtonClick button="right">
                <goto containerName="speed"/>
            </onButtonClick>
        </block>
        <block name="buttons" start="194000" end="195500">
            <onEnd>
                <stop/>
            </onEnd>
        </block>
        <block name="speed" start="126750" end="127500">
            <onEnd>
                <stop/>
            </onEnd>
            <onButtonClick button="select">
                <goto containerName="normal"/>
            </onButtonClick>
            <onButtonClick button="down">
                <goto containerName="slow"/>
            </onButtonClick>
            <onButtonClick button="up">
                <goto containerName="fast"/>
            </onButtonClick>
        </block>
        <block name="normal" start="130500" end="131750">
            <onEnter>
                <setSpeed relative="normal"/>
            </onEnter>
            <onEnd>
                <stop/>
                <return/>
            </onEnd>
            <onButtonClick button="Up" setSpeed="up">
                <goto containerName="fast"/>
            </onButtonClick>
            <onButtonClick button="down" setSpeed="down">
                <goto containerName="slow"/>
            </onButtonClick>
        </block>
        <block name="your recordings" start="51250" end="53000">
            <onEnd>
                <stop/>
            </onEnd>
            <onButtonClick button="left">
                <goto containerName="other recordings"/>
            </onButtonClick>
            <onButtonClick button="select">
                <callblock blockname="normal" returnRewindSeconds="5"/>
            </onButtonClick>
        </block>
        <block name="other recordings" start="57000" end="58500">
            <onEnd>
                <stop/>
            </onEnd>
            <onButtonClick button="left">
                <goto containerName="your recordings"/>
            </onButtonClick>
            <onButtonClick button="select">
                <goto containerName="notready"/>
            </onButtonClick>
        </block>
        <block start="130000" end="150600">
            <onButtonClick button="right">
                <nextblock class="main-menu"/>
            </onButtonClick>
            <onButtonClick button="Left">
                <previousblock class="main-menu"/>
            </onButtonClick>
        </block>
        <block name="slow" start="138250" end="139250">
            <onEnd>
                <stop/>
            </onEnd>
            <onButtonClick button="down" setSpeed="down">
                <goto containerName="slower"/>
            </onButtonClick>
            <onButtonClick button="up" SetSpeed="normal">
                <goto containerName="normal"/>
            </onButtonClick>
            <onButtonClick button="select">
                <goto containerName="welcome"/>
            </onButtonClick>
        </block>
        <block name="slower" start="146250" end="147500">
            <onEnd>
                <stop/>
            </onEnd>
            <onButtonClick button="down" setSpeed="down">
                <goto containerName="slowest"/>
            </onButtonClick>
            <onButtonClick button="up" setSpeed="up">
                <goto containerName="slow"/>
            </onButtonClick>
            <onButtonClick button="select">
                <goto containerName="welcome"/>
            </onButtonClick>
        </block>
        <block name="slowest" start="153500" end="154750">
            <onStart>
                <stop/>
            </onStart>
            <onEnd>
                <pause/>
            </onEnd>
            <onButtonClick button="playPause">
                <playPause/>
                <return/>
            </onButtonClick>
            <onButtonClick button="up" setSpeed="up">
                <goto containerName="slower"/>
            </onButtonClick>
            <onButtonClick button="select">
                <goto containerName="welcome"/>
            </onButtonClick>
        </block>
        <block name="fast" start="134500" end="135500">
            <onEnd>
                <stop/>
            </onEnd>
            <onButtonClick button="down" setSpeed="normal">
                <goto containerName="normal"/>
            </onButtonClick>
            <onButtonClick button="up" setSpeed="up">
                <goto containerName="faster"/>
            </onButtonClick>
            <onButtonClick button="select">
                <goto containerName="welcome"/>
            </onButtonClick>
        </block>
        <block name="faster" start="142250" end="143500">
            <onEnd>
                <stop/>
            </onEnd>
            <onButtonClick button="down" setSpeed="down">
                <goto containerName="slowest"/>
            </onButtonClick>
            <onButtonClick button="up" setSpeed="up">
                <goto containerName="fastest"/>
            </onButtonClick>
            <onButtonClick button="select">
                <goto containerName="welcome"/>
            </onButtonClick>
        </block>
        <block name="fastest" start="149250" end="150500">
            <onButtonClick button="down" setSpeed="down">
                <goto containerName="faster"/>
            </onButtonClick>
            <onButtonClick button="select">
                <goto containerName="welcome"/>
            </onButtonClick>
        </block>
    </file>
</package>
