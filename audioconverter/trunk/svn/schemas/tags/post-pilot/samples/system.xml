<?xml version="1.0" encoding="UTF-8"?>
<Package xmlns="http://www.literacybridge.org/2008/book"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.literacybridge.org/2008/book file:/lbsvn/talkingbook/schemas/trunk/TalkingBook.xsd" Name="system" Precision="128" Version="0000">
    <OnStart>
        <Goto ContainerName="bell"/>
    </OnStart>    
    <OnButtonClick Button1="Home" Button2="Up">
        <Goto ContainerName="welcome"/>
    </OnButtonClick>
    <OnButtonClick Button1="Star">
        <SetUSBMode Active="true" HostOrDevice="device"/>
    </OnButtonClick>
    <OnButtonClick Button1="Plus" InsertSoundBlock="short-bell">
        <SetVolume relative="up" />
    </OnButtonClick>
    <OnButtonClick Button1="Minus" InsertSoundBlock="short-bell">
        <SetVolume relative="down"/>
    </OnButtonClick>
    <OnButtonClick Button1="PlayPause">
        <PlayPause/>
    </OnButtonClick>
    <File Name="bell">
        <Block Name="bellBlock" Start="0">
            <OnEnd>
                <Goto ContainerName="welcome"/>
            </OnEnd>
        </Block>
        <Block Name="short-bell" Start="500" End="1000">
            <OnEnd>
                <Stop/>
                <Return/>
            </OnEnd>
        </Block>
    </File>
    <File Name="aos">
        <Block Start="0" End="29600">
            <OnButtonClick Button1="Left">
                <Goto ContainerName="share"/>
            </OnButtonClick>
            <OnButtonClick Button1="Right">
                <Goto ContainerName="listen"/>
            </OnButtonClick>
            <OnButtonClick Button1="Home">
                <Goto ContainerName="help"/>
            </OnButtonClick>
        </Block>
        <Block Name="welcome" Start="1000" End="2000">
            <OnEnd>
                <Goto ContainerName="forhelp"/>
            </OnEnd>
        </Block>
        <Block Name="forhelp" Start="27000" End="29500">
            <OnEnd>
                <Stop/>
            </OnEnd>
        </Block>
        <Block Name="listen" Start="62250" End="63500" Class="main-menu">
            <OnEnter>
                <SetLight Light="Red" Mode="On"/>
                <SetLight Light="Green" Mode="Off"/>
            </OnEnter>
            <OnExit>
                <SetLight Light="Red" Mode="Off"/>
            </OnExit>
            <OnEnd>
                <Stop/>
            </OnEnd>
            <OnButtonClick Button1="Select" Button2="Down">
                <Goto ContainerName="your recordings"/>
            </OnButtonClick>
            <OnButtonClick Button1="Right" InsertSoundBlock="bell">
                <Goto ContainerName="speak"/>
            </OnButtonClick>
            <OnButtonClick Button1="Left">
                <Goto ContainerName="share"/>
            </OnButtonClick>
        </Block>
        <Block Name="speak" Start="66000" End="67500" Class="main-menu">
            <OnEnter>
                <SetLight Light="Red" Mode="On"/>
                <SetLight Light="Green" Mode="On"/>
            </OnEnter>
            <OnExit>
                <SetLight Light="Red" Mode="Off"/>
                <SetLight Light="Green" Mode="On"/>
            </OnExit>
            <OnEnd>
                <Stop/>
            </OnEnd>
            <OnButtonHold Button1="Select" Button2="Down" InsertSoundBlock="share">
                <Goto ContainerName="notready"/>
            </OnButtonHold>
            <OnButtonClick Button1="Left">
                <Goto ContainerName="listen"/>
            </OnButtonClick>
            <OnButtonClick Button1="Right">
                <Goto ContainerName="share"/>
            </OnButtonClick>
        </Block>
        <Block Name="share" Start="70000" End="71000" Class="main-menu">
            <OnEnter>
                <SetLight Light="Red" Mode="Off"/>
                <SetLight Light="Green" Mode="Off"/>
            </OnEnter>
            <OnEnd>
                <Stop/>
            </OnEnd>
            <OnButtonClick Button1="Select" Button2="Down" InsertSoundBlock="share">
                <Goto ContainerName="notready"/>
            </OnButtonClick>
            <OnButtonClick Button1="Left">
                <Goto ContainerName="speak"/>
            </OnButtonClick>
            <OnButtonClick Button1="Right">
                <Goto ContainerName="listen"/>
            </OnButtonClick>
        </Block>
        <Block Name="notready" Start="75000" End="77000">
            <OnStart InsertSoundBlock="bell">
                <Stop/>
            </OnStart>
            <OnEnd InsertSoundBlock="bell">
                <Stop/>
            </OnEnd>
            <OnButtonHold Button1="Down">
                <LoadPackage Name="sikulu"/>
            </OnButtonHold>
        </Block>
        <Block Name="help" Start="168500" End="169250">
            <OnEnd>
                <Stop/>
            </OnEnd>
            <OnButtonClick Button1="Left">
                <Goto ContainerName="buttons"/>
            </OnButtonClick>
            <OnButtonClick Button1="Right">
                <Goto ContainerName="speed"/>
            </OnButtonClick>
        </Block>
        <Block Name="buttons" Start="194000" End="195500">
            <OnEnd>
                <Stop/>
            </OnEnd>
        </Block>
        <Block Name="speed" Start="126750" End="127500">
            <OnEnd>
                <Stop/>
            </OnEnd>
            <OnButtonClick Button1="Select">
                <Goto ContainerName="normal"/>
            </OnButtonClick>
            <OnButtonClick Button1="Down">
                <Goto ContainerName="slow"/>
            </OnButtonClick>
            <OnButtonClick Button1="Up">
                <Goto ContainerName="fast"/>
            </OnButtonClick>
        </Block>
        <Block Name="normal" Start="130500" End="131750">
            <OnEnter>
                <SetSpeed relative="normal"/>
            </OnEnter>
            <OnEnd>
                <Stop/>
                <Return/>
            </OnEnd>
            <OnButtonClick Button1="Up" SetSpeed="up">
                <Goto ContainerName="fast"/>
            </OnButtonClick>
            <OnButtonClick Button1="Down" SetSpeed="down">
                <Goto ContainerName="slow"/>
            </OnButtonClick>
        </Block>
        <Block Name="your recordings" Start="51250" End="53000" Hyperlinked="true">
            <OnEnd>
                <Stop/>
            </OnEnd>
            <OnButtonClick Button1="Left" Button2="Right">
                <Goto ContainerName="other recordings"/>
            </OnButtonClick>
            <OnButtonClick Button1="Select">
                <CallBlock BlockName="normal" ReturnRewindSeconds="5"/>
            </OnButtonClick>
        </Block>
        <Block Name="other recordings" Start="57000" End="58500">
            <OnEnd>
                <Stop/>
            </OnEnd>
            <OnButtonClick Button1="Left" Button2="Right">
                <Goto ContainerName="your recordings"/>
            </OnButtonClick>
            <OnButtonClick Button1="Select">
                <Goto ContainerName="notready"/>
            </OnButtonClick>
        </Block>
        <Block Start="130000" End="150600">
            <OnButtonClick Button1="Right">
                <NextBlock Class="main-menu"/>
            </OnButtonClick>
            <OnButtonClick Button1="Left">
                <PreviousBlock Class="main-menu"/>
            </OnButtonClick>
        </Block>
        <Block Name="slow" Start="138250" End="139250">
            <OnEnd>
                <Stop/>
            </OnEnd>
            <OnButtonClick Button1="Down" SetSpeed="down">
                <Goto ContainerName="slower"/>
            </OnButtonClick>
            <OnButtonClick Button1="Up" SetSpeed="normal">
                <Goto ContainerName="normal"/>
            </OnButtonClick>
            <OnButtonClick Button1="Select">
                <Goto ContainerName="welcome"/>
            </OnButtonClick>
        </Block>
        <Block Name="slower" Start="146250" End="147500">
            <OnEnd>
                <Stop/>
            </OnEnd>
            <OnButtonClick Button1="Down" SetSpeed="down">
                <Goto ContainerName="slowest"/>
            </OnButtonClick>
            <OnButtonClick Button1="Up" SetSpeed="up">
                <Goto ContainerName="slow"/>
            </OnButtonClick>
            <OnButtonClick Button1="Select">
                <Goto ContainerName="welcome"/>
            </OnButtonClick>
        </Block>
        <Block Name="slowest" Start="153500" End="154750">
            <OnStart>
                <Stop/>
            </OnStart>
            <OnEnd>
                <Pause/>
            </OnEnd>
            <OnButtonClick Button1="PlayPause">
                <PlayPause/>
                <Return/>
            </OnButtonClick>
            <OnButtonClick Button1="Up" SetSpeed="up">
                <Goto ContainerName="slower"/>
            </OnButtonClick>
            <OnButtonClick Button1="Select">
                <Goto ContainerName="welcome"/>
            </OnButtonClick>
        </Block>
        <Block Name="fast" Start="134500" End="135500">
            <OnEnd>
                <Stop/>
            </OnEnd>
            <OnButtonClick Button1="Down" SetSpeed="normal">
                <Goto ContainerName="normal"/>
            </OnButtonClick>
            <OnButtonClick Button1="Up" SetSpeed="up">
                <Goto ContainerName="faster"/>
            </OnButtonClick>
            <OnButtonClick Button1="Select">
                <Goto ContainerName="welcome"/>
            </OnButtonClick>
        </Block>
        <Block Name="faster" Start="142250" End="143500">
            <OnEnd>
                <Stop/>
            </OnEnd>
            <OnButtonClick Button1="Down" SetSpeed="down">
                <Goto ContainerName="slowest"/>
            </OnButtonClick>
            <OnButtonClick Button1="Up" SetSpeed="up">
                <Goto ContainerName="fastest"/>
            </OnButtonClick>
            <OnButtonClick Button1="Select">
                <Goto ContainerName="welcome"/>
            </OnButtonClick>
        </Block>
        <Block Name="fastest" Start="149250" End="150500">
            <OnButtonClick Button1="Down" SetSpeed="down">
                <Goto ContainerName="faster"/>
            </OnButtonClick>
            <OnButtonClick Button1="Select">
                <Goto ContainerName="welcome"/>
            </OnButtonClick>
        </Block>
    </File>
</Package>
