<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	<mx:Script>
		<![CDATA[
			import org.literacybridge.authoring.events.SchemaUpdateEvent;
			import org.literacybridge.authoring.schema.ContentBlock;
			
			[Bindable] public var block:ContentBlock;		
			
			private function onChange():void {
				block.label = blockName.text;
				block.start = Number(blockStart.text);
				block.end = Number(blockEnd.text);
				block.className = blockClass.text;
				dispatchEvent(new SchemaUpdateEvent());
			}
				
		]]>
	</mx:Script>

	<mx:Form backgroundAlpha="1.0" width="100%" height="100%">
		<mx:FormItem label="Name:">
			<mx:TextInput id="blockName" editable="true" text="{block.label}" change="onChange()"/>
		</mx:FormItem>
		<mx:FormItem label="Start:">
			<mx:TextInput id="blockStart" editable="true" text="{block.start}" change="onChange()"/>
		</mx:FormItem>
		<mx:FormItem label="End:">
			<mx:TextInput id="blockEnd" editable="true" text="{block.end}" change="onChange()"/>
		</mx:FormItem>
		<mx:FormItem label="Class:">
			<mx:ComboBox id="blockClass" editable="true" text="{block.className}" change="onChange()"/>
		</mx:FormItem>		
	</mx:Form>
</mx:HBox>
