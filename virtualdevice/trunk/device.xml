<?xml version="1.0" encoding="utf-8"?>
<Device xmlns="http://www.talkingbook.org/2008/book" Name="Device">

  <!-- Default Device Actions -->
  <OnButton Button="PlayPause" Action="Release">
    <ActionSet>
      <FlagTest Flag="#isPlaying" Test="IsTrue"/>
      <SetLight Light="Green" Mode="Off"/>
      <Pause/>
    </ActionSet>
    <ActionSet>
      <SetLight Light="Green" Mode="On"/>
      <Play/>
    </ActionSet>
  </OnButton>
  <OnButton Button="Right" Action="Release">
    <ActionSet>
      <Goto>
        <Location Target="Next"/>
      </Goto>
    </ActionSet>
  </OnButton>
  <OnButton Button="Left" Action="Release">
    <ActionSet>
      <CounterTest Counter="#offset" Comparison="LessThan" Value="2000"/>
      <Goto>
        <Location Target="Previous"/>
      </Goto>
    </ActionSet>
    <ActionSet>
      <Goto>
        <Location Target="Beginning"/>
      </Goto>
    </ActionSet>
  </OnButton>
  <OnButton Button="VolumeUp" Action="Press">
    <ActionSet>
      <SetVolume Level="10" Relative ="true"/>
    </ActionSet>
  </OnButton>
  <OnButton Button="VolumeDown" Action="Press">
    <ActionSet>
      <SetVolume Level="-10" Relative ="true"/>
    </ActionSet>
  </OnButton>
  <OnButton Button="Up" Action="Release">
    <ActionSet>
      <Goto>
        <Location Offset ="15000"/>
      </Goto>
    </ActionSet>
  </OnButton>
  <OnButton Button="Down" Action="Release">
    <ActionSet>
      <Goto>
        <Location Offset ="-5000"/>
      </Goto>
    </ActionSet>
  </OnButton>
  <OnFinish>
    <ActionSet>
      <Goto>
        <Location Target="Next"/>
      </Goto>
    </ActionSet>
  </OnFinish>



  <!-- Package Content -->
  <Package Name="Package" ID="lesson">
    <OnButton Button="Home" Action="Release">
      <ActionSet>
        <Goto>
          <Location Ref="lesson:"/>
        </Goto>
      </ActionSet>
    </OnButton>
    <File ID="einstein" Href="../audio/emc2.mp3" Class="Chapter">
      <OnButton Button="Select" Action="Release">
        <ActionSet>
          <PushStack>
            <Location/>
          </PushStack>
          <Goto>
            <Location Ref="lesson:/mandela"/>
          </Goto>
        </ActionSet>
      </OnButton>
    </File>
    <File ID="eco" Href="../audio/economist1.mp3" Class="Chapter" Name="File">
      <OnFinish>
        <ActionSet>
          <Pause/>
        </ActionSet>
      </OnFinish>
    </File>
    <File ID="mandela" Href="../audio/nelsonmandela-freedomforall.mp3" Class="Chapter">
      <OnFinish>
        <ActionSet>
          <Goto>
            <PopStack/>
          </Goto>
        </ActionSet>
      </OnFinish>
    </File>
  </Package>


</Device>

